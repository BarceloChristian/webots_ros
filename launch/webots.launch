<?xml version="1.0"?>
<launch>
  <arg name="world" default="" doc="Path to the world to load"/>
  <arg name="mode" default="realtime" doc="Startup mode"/>
  <arg name="no_gui" default="false" doc="Start Webots with minimal GUI"/>

  <arg name="stream" default="true" doc="Start the Webots streaming server"/>
  <arg name="stream_port" default="1234" doc="Streaming server port."/>
  <arg name="stream_mode" default="x3d" doc="Streaming mode."/>
  <arg name="stream_monitor_activity" default="false" doc="Print a dot '.' on stdout every 5 seconds."/>
  <arg name="stream_disable_text_streams" default="false" doc="Disable the streaming of stdout and stderr."/>

  <node name="webots" pkg="webots_ros" type="webots_launcher.py"
        args="--world=$(arg world) --mode=$(arg mode) --no-gui=$(arg no_gui)
            --stream=$(arg stream) --stream-port=$(arg stream_port) --stream-mode=$(arg stream_mode)
            --stream-monitor-activity=$(arg stream_monitor_activity)
            --stream-disable-text-streams=$(arg stream_disable_text_streams)"
            required="true" />
</launch>
